{{- $name := .name -}}
{{- $file := joinPath .secrets.cache $name -}}
{{- $allowed := false -}}
{{- range .secrets.universal.bitwarden }}
  {{- if eq . $name }}
    {{- $allowed = true -}}
  {{- end }}
{{- end }}
{{- if not $allowed }}
  {{- fail (printf "cached-secret: %q must be listed in secrets.universal.bitwarden" $name) }}
{{- end }}
{{- if stat $file }}
{{- include $file }}
{{- end }}
