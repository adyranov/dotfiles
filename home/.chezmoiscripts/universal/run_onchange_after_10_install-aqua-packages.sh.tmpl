#!/usr/bin/env bash
set -eufo pipefail

source $HOME/.config/shell/exports.sh

if ! command -v aqua >/dev/null 2>&1; then
  echo "Installing aqua"
  curl -sSfL https://raw.githubusercontent.com/aquaproj/aqua-installer/v1.1.2/aqua-installer | bash
fi

{{- $files := list -}}
{{- range $path := glob (list .chezmoi.sourceDir "private_dot_config/aqua/**/*.yaml.tmpl" | join "/") }}
{{- $files = concat $files (list (include $path)) -}}
{{- end }}

# aqua.yaml.tmpl hash: {{ $files | join "" | sha256sum }}
aqua update-aqua
aqua install -a
