#!/bin/bash

set -evo pipefail

{{- if (eq .chezmoi.os "linux") }}
    sudo apt update
    sudo apt install -y \
    git \
    subversion \
    zsh
{{- else if (eq .chezmoi.os "darwin") }}
    brew update
    brew install \
    git \
    subversion \
    zsh
{{- end }}

which zsh
chsh -s $(which zsh)
