{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'workarounds:all',
    ':automergeDigest',
    ':automergeMinor',
    ':enablePreCommit',
    ':rebaseStalePrs',
    ':semanticCommits',
    ':semanticCommitScope(deps)',
    'helpers:pinGitHubActionDigests',
    'docker:pinDigests',
    'group:allNonMajor',
  ],
  timezone: 'UTC',
  prConcurrentLimit: 10,
  branchConcurrentLimit: 10,
  prCreation: 'not-pending',
  rebaseWhen: 'conflicted',
  labels: [
    'dependencies',
  ],
  minimumReleaseAge: '3 days',
  dependencyDashboardAutoclose: true,
  lockFileMaintenance: {
    enabled: true,
    automerge: true,
    automergeType: 'branch',
    extends: [
      'schedule:weekly',
    ],
  },
  packageRules: [
    {
      description: 'Require dashboard approval for major updates',
      matchUpdateTypes: [
        'major',
      ],
      dependencyDashboardApproval: true,
    },
    {
      description: 'Weekly automerge for CI/Tools',
      matchManagers: [
        'github-actions',
        'pre-commit',
      ],
      automerge: true,
      automergeType: 'branch',
      ignoreTests: true,
      extends: [
        'schedule:weekly',
      ],
    },
  ],
}
