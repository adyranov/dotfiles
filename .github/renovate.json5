{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:base",
    ":automergeDigest",
    ":automergeMinor",
    ":enablePreCommit",
    ":rebaseStalePrs",
    ":semanticCommits",
    ":semanticCommitScope(deps)",
    "helpers:pinGitHubActionDigests",
    "group:allNonMajor",
    "github>aquaproj/aqua-renovate-config:installer-script#1.5.2(home/.chezmoiscripts/universal/.*aqua-packages\\.sh\\.tmpl)",
    "github>aquaproj/aqua-renovate-config:file#1.5.2(home/private_dot_config/aqua/aqua\\.yaml\\.tmpl)",
    "github>aquaproj/aqua-renovate-config:file#1.5.2(home/private_dot_config/aqua/toolchains/.*\\.yaml\\.tmpl)",
  ],
  labels: ["dependencies"],
  stabilityDays: 3,
  dependencyDashboardAutoclose: true,
  asdf: {
    fileMatch: ["(^|/)\\.tool-versions$", "(^|/)dot_tool-versions.tmpl$"],
  },
  packageRules: [
    {
      description: "Require dashboard approval for major updates",
      matchUpdateTypes: ["major"],
      dependencyDashboardApproval: true,
    },
    {
      description: "Update Aqua weekly",
      matchPackageNames: ["aquaproj/aqua-registry", "aquaproj/aqua"],
      extends: ["schedule:weekly"],
    },
  ],
}
