[include]
	path = ~/.gituser
[pack]
	threads = 0
[diff]
	renamelimit = 0
	tool = meld
	mnemonicprefix = true
	renames = copies
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	interactive = auto
[alias]
	aa = add -A .
	up = pull --rebase
	co = checkout
	ci = commit
	st = status
	br = branch
	rb = rebase
	df = difftool -d
	lg = log -p
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	type = cat-file -t
	dump = cat-file -p
	unstage = reset HEAD --
	last = log -1 HEAD
[core]
	attributesfile=~/.gitattributes
	autocrlf = input
	safecrlf = true
	editor = gedit
	whitespace = trailing-space,space-before-tab
[branch]
	autosetupmerge = true
[merge]
	tool = mymeld
        summary = true
        stat = true
	conflictstyle = diff3
[mergetool "mymeld"]
	cmd = meld --diff $BASE $LOCAL --diff $BASE $REMOTE --diff $LOCAL $MERGED $REMOTE
[push]
	default = tracking
[diff "exif"]
	textconv = exif
	cachetextconv = true
[diff "word"]
	textconv = strings
	cachetextconv = true
[diff "ascii2native"]
	textconv = native2ascii -reverse
	cachetextconv = true
